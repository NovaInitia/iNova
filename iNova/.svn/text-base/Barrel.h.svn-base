#import "Tool.h"

@interface Barrel : Tool

@property (nonatomic) NSUInteger idNum;
@property (nonatomic, retain) NSString* username;

@property (nonatomic) NSUInteger sg;
@property (nonatomic) NSUInteger traps;
@property (nonatomic) NSUInteger barrels;
@property (nonatomic) NSUInteger spiders;
@property (nonatomic) NSUInteger shields;
@property (nonatomic) NSUInteger doorways;
@property (nonatomic) NSUInteger signposts;

@property (nonatomic, retain) NSString* message;
@property (nonatomic, retain) NSString* label;

- (id) initWithID:(int)idNum username:(NSString*)username;

- (void) addContentsSg:(NSUInteger)sg traps:(NSUInteger)traps barrels:(NSUInteger)barrels spiders:(NSUInteger)spiders shields:(NSUInteger)shields doorways:(NSUInteger)doorways signposts:(NSUInteger)signposts message:(NSString*)message label:(NSString*)label;

@end
